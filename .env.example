# Ecomora Server Environment Configuration

# Environment Configuration
ENV=development
APP_VERSION=1.0.0

# Database Configuration
JDBC_DRIVER=org.postgresql.Driver
JDBC_DATABASE_URL=jdbc:postgresql://localhost:5432/ecomora
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# JWT Security Configuration
JWT_SECRET=your-super-secret-jwt-key-min-256-bits
JWT_AUDIENCE=ecomora-api
JWT_DOMAIN=https://yourserver.com/
JWT_REALM=ecomora server
JWT_EXPIRATION_HOURS=24

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database Configuration
JDBC_DATABASE_URL=jdbc:postgresql://localhost:5432/ecomora_db
DB_USERNAME=postgres
DB_PASSWORD=password

# File Storage Configuration
STATIC_FILE_ROOT=/app/uploads
UPLOAD_DIR=/app/uploads

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-256-bits
JWT_AUDIENCE=ecomora-api
JWT_DOMAIN=https://your-domain.com/
JWT_REALM=ecomora server
JWT_EXPIRATION_HOURS=24

# Redis Configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Cloud Configuration (for deployment)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_CLOUD_SQL_INSTANCE=your-sql-instance

# Production Security
# Generate a strong secret for production:
# openssl rand -base64 32
JWT_SECRET_PRODUCTION=CHANGE_THIS_IN_PRODUCTION

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/ecomora-server.log

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Payment Configuration (if using payment features)
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_SHORTCODE=your-shortcode
MPESA_PASSKEY=your-passkey

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090